{% extends 'base.html.twig' %}

{% block menu %}
    <a class="nav-item nav-link active" href="{{ path('showMyName') }}">Home</a>
    <a href="{{ path('about-me') }}">About me</a>
    <div class="nav-item">{{ name|title }}</div>
{% endblock %}

{% block body %}
    <h1>Hello {{ name }}</h1>
    <form action="{{ path('changeMyName') }}" method="POST">
        <label for="new_name">New Name: </label>
        <input type="text" name="new_name" id="new_name">
        <input type="submit" value="Set new name">
    </form>
{% endblock %}

